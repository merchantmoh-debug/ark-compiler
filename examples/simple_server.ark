
// tests/test_http_bridge.ark
// Verifies the sys.net.http.serve bridge

func handler(path) {
    print("Received request for: " + path)
    return "Hello from Ark Bridge! You requested: " + path
}

func main() {
    print("Starting Ark HTTP Server on port 8087...")
    sys.net.http.serve(8087, handler)
}

main()
