// Standard Library: Crypto
crypto := {
    hash: (s) => sys.crypto.hash(s),
    merkle_root: (l) => sys.crypto.merkle_root(l),
    ed25519: {
        gen: () => sys.crypto.ed25519.gen(),
        sign: (m, k) => sys.crypto.ed25519.sign(m, k),
        verify: (s, m, p) => sys.crypto.ed25519.verify(s, m, p)
    }
}
