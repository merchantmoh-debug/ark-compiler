{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Ark",
  "scopeName": "source.ark",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#constants" },
    { "include": "#functions" },
    { "include": "#types" },
    { "include": "#operators" },
    { "include": "#intrinsics" },
    { "include": "#variables" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.ark",
          "match": "//.*$"
        },
        {
          "name": "comment.block.ark",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.ark",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.ark",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.ark",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.ark",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.ark",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.float.ark",
          "match": "\\b[0-9]+\\.[0-9]+\\b"
        },
        {
          "name": "constant.numeric.integer.ark",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.ark",
          "match": "\\b(if|else|while|for|return|match|break|continue|loop|in)\\b"
        },
        {
          "name": "keyword.declaration.ark",
          "match": "\\b(func|let|class|struct|enum|type|import|module|macro)\\b"
        },
        {
          "name": "keyword.operator.logical.ark",
          "match": "\\b(and|or|not)\\b"
        },
        {
          "name": "keyword.other.ark",
          "match": "\\b(linear|consume|move|own|borrow)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.ark",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.ark",
          "match": "\\b(nil|null)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.ark",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "entity.name.function.ark" }
          }
        },
        {
          "name": "meta.function.definition.ark",
          "match": "\\b(func)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.declaration.ark" },
            "2": { "name": "entity.name.function.definition.ark" }
          }
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.ark",
          "match": "\\b(PVec|PMap|List|String|Integer|Boolean|Unit|Struct|Linear|Value)\\b"
        },
        {
          "name": "entity.name.type.ark",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.ark",
          "match": ":="
        },
        {
          "name": "keyword.operator.comparison.ark",
          "match": "(==|!=|>=|<=|>|<)"
        },
        {
          "name": "keyword.operator.arithmetic.ark",
          "match": "(\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.arrow.ark",
          "match": "->"
        }
      ]
    },
    "intrinsics": {
      "patterns": [
        {
          "name": "support.function.builtin.ark",
          "match": "\\b(print|sys\\.len|sys\\.list\\.get|sys\\.list\\.append|sys\\.list\\.pop|sys\\.struct\\.get|sys\\.struct\\.set|sys\\.struct\\.has|sys\\.fs\\.read|sys\\.fs\\.write|sys\\.io\\.read_line|sys\\.io\\.write|sys\\.time\\.now|sys\\.time\\.sleep|sys\\.crypto\\.hash|sys\\.crypto\\.verify|sys\\.exec|sys\\.exit|sys\\.ai\\.ask|sys\\.vm\\.eval|sys\\.vm\\.source)\\b"
        },
        {
          "name": "support.function.persistent.ark",
          "match": "\\b(pvec\\.new|pvec\\.conj|pvec\\.get|pvec\\.assoc|pvec\\.pop|pvec\\.len|pmap\\.new|pmap\\.assoc|pmap\\.dissoc|pmap\\.get|pmap\\.keys|pmap\\.merge)\\b"
        },
        {
          "name": "support.function.math.ark",
          "match": "\\b(math\\.pow|math\\.sqrt|math\\.sin|math\\.cos|math\\.tan|math\\.atan2|math\\.Tensor|math\\.matmul|math\\.transpose|math\\.dot)\\b"
        },
        {
          "name": "support.function.net.ark",
          "match": "\\b(net\\.http\\.request|net\\.http\\.serve|net\\.socket\\.bind|net\\.socket\\.accept|net\\.socket\\.connect|net\\.socket\\.send|net\\.socket\\.recv|net\\.socket\\.close)\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.ark",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
